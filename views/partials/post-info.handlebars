            <article class="col-12 col-md-6 col-lg-4 col-xl-3 text-center p-4">
                <div class="title">
                    {{#if user.username }}
                    <div>
                        <h3 class="username">
                            <a href="/u/{{user_id}}" class="p-2">{{user.username}}</a>
                        </h3>
                    </div>
                    {{/if}}
                    <div>
                        {{{iframe}}}
                    </div>
                    <p class="post-title">
                    <a href="/post/{{id}}">{{title}}</a>
                    </p>
                    <div>
                        <p>{{vote_count}} Points
                            <img class="upvote-btn" src="/images/UpPlay.svg" width="25" height="25" align="top"  id="{{id}}"></img>
                        <a>{{comments.length}} comments</a>
                        </p>
                    </div>
                </div>
            </article>